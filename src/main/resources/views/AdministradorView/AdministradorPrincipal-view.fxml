<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="co.edu.uniquindio.poo.billeteradigital.viewcontroller.AdministradorController.AdministradorController">

    <top>
        <Label text="Panel de Administración" style="-fx-font-size: 18px; -fx-font-weight: bold;" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TabPane>
            <!-- Gestión de Usuarios -->
            <Tab text="Usuarios">
                <VBox spacing="10" alignment="CENTER">
                    <Button text="Crear Usuario" onAction="#onCrearUsuario"/>
                    <Button text="Actualizar Usuario" onAction="#onActualizarUsuario"/>
                    <Button text="Eliminar Usuario" onAction="#onEliminarUsuario"/>
                    <Button text="Listar Usuarios" onAction="#onListarUsuarios"/>
                </VBox>
            </Tab>

            <!-- Gestión de Cuentas -->
            <Tab text="Cuentas">
                <VBox spacing="10" alignment="CENTER">
                    <Button text="Agregar Cuenta" onAction="#onAgregarCuenta"/>
                    <Button text="Actualizar Cuenta" onAction="#onActualizarCuenta"/>
                    <Button text="Eliminar Cuenta" onAction="#onEliminarCuenta"/>
                </VBox>
            </Tab>

            <!-- Gestión de Transacciones -->
            <Tab text="Transacciones">
                <VBox spacing="10" alignment="CENTER">
                    <Button text="Crear Transacción" onAction="#onCrearTransaccion"/>
                    <Button text="Listar Transacciones" onAction="#onListarTransacciones"/>
                </VBox>
            </Tab>

            <!-- Estadísticas -->
            <Tab text="Estadísticas">
                <VBox spacing="10" alignment="CENTER">
                    <Button text="Gastos más comunes" onAction="#onGastosMasComunes"/>
                    <Button text="Usuarios con más transacciones" onAction="#onUsuariosConMasTransacciones"/>
                    <Button text="Saldo promedio de usuarios" onAction="#onSaldoPromedioUsuarios"/>
                </VBox>
            </Tab>

            <!-- Gráficas -->
            <Tab text="Gráficas">
                <VBox spacing="10" alignment="CENTER">
                    <Label text="Aquí se mostrarán gráficas con JavaFX Charts"/>
                </VBox>
            </Tab>
        </TabPane>
    </center>

</BorderPane>
