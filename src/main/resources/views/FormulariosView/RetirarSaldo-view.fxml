<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.billeteradigital.viewcontroller.formularioViewController.RetirarController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="20" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100" AnchorPane.bottomAnchor="50" alignment="CENTER">

        <Label text="Seleccione la cuenta" style="-fx-font-size: 16px;" />
        <ComboBox fx:id="comboCuenta" promptText="Seleccione cuenta" prefWidth="200"/>

        <Label text="¿Cuánto quieres retirar?" style="-fx-font-size: 18px;"/>
        <TextField fx:id="txtMontoRetiro" promptText="Ingrese monto a retirar" prefWidth="200"/>

        <Label text="Descripción (opcional)" style="-fx-font-size: 14px;"/>
        <TextField fx:id="txtDescripcion" promptText="Ingrese descripción" prefWidth="200"/>

        <Button fx:id="btnRetirar" text="Retirar" prefWidth="150" onAction="#retirar"/>
    </VBox>

</AnchorPane>
